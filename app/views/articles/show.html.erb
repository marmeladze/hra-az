<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= @article.title  %></h1>
      <ol class="breadcrumb">
        <li><%= link_to "Ana Səhifə", root_path  %></li>
        <li><%= link_to @article.category.name, category_path(slug: @article.category.slug) %>
        <li class="active"><%= @article.title %></li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <hr>
      <p>
        <i class="glyphicon glyphicon-calendar"></i>&nbsp;<small><%= time_ago_in_words(@article.created_at) %></small>&nbsp;&nbsp;&nbsp;
        <i class="fa fa-user"></i>&nbsp;<small><%= link_to @article.author.name, '#' %></small>
      </p>
      
      <% if @article.is_blog_post? %> 
        <%= render 'partials/blog_post' %>
      <% else %>
        <%= render 'partials/normal_post' %>
      <% end %>
    </div>
  </div>
</div>