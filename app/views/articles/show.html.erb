<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= @article.title  %></h1>
      <ol class="breadcrumb">
        <li><%= link_to "Ana Səhifə", root_path  %></li>
        <li><%= link_to @article.category.name, category_path(slug: @article.category.slug) %>
        <li class="active"><%= @article.title %></li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <hr>
      <p>
        <i class="fa fa-clock-o"></i>&nbsp;<small><%= time_ago_in_words(@article.created_at) %></small>&nbsp;&nbsp;&nbsp;
        <i class="fa fa-user"></i>&nbsp;<small><%= link_to @article.author.name, '#' %></small>
      </p>

      <%= cl_image_tag(@article.image, height: 300, width: 1170, crop: :fill, class: "img-responsive", alt: @article.title) %>
      <hr>

      <!-- Post Content -->
      <p class="lead"><%= @article.body.html_safe %></p>
      <hr>    
    </div>
  </div>
</div>