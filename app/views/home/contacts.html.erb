<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t(:contacts) %>
      </h1>
      <ol class="breadcrumb">
        <li><%= link_to I18n.t(:home_page), root_path  %></li>
        <li class="active"><%= t(:contacts) %></li>
      </ol>
    </div>
  </div>
  <div class="row">
      <!-- Map Column -->
      <div class="col-md-8">
          <!-- Embedded Google Map -->
          <iframe width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=az&amp;ie=UTF8&amp;ll=37.0625,-95.677068&amp;spn=56.506174,79.013672&amp;t=m&amp;z=4&amp;output=embed"></iframe>
      </div>
      <!-- Contact Details Column -->
      <div class="col-md-4">
          <h3><%= t(:contact_details) %></h3>
          <p><%= @line1 %><br><%= @line2 %>
          </p>
          <p><i class="fa fa-phone"></i> 
              <abbr title="Phone">T</abbr>: <%= @contact.phone %></p>
          <p><i class="fa fa-envelope-o"></i> 
              <abbr title="Email">E</abbr>: <a href="mailto:<%= @contact.email %>"><%= @contact.email %></a>
          </p>
          <ul class="list-unstyled list-inline list-social-icons">
              <li>
                <%= link_to @contact.facebook do  %>
                  <i class="fa fa-facebook-square fa-2x"></i>
                <% end %>
              </li>
              <li>
                <%= link_to @contact.twitter do  %>
                  <i class="fa fa-twitter-square fa-2x"></i>
                <% end %>
              </li>
          </ul>
      </div>
  </div>
</div>