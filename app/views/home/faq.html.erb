<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Sual-Cavab</h1>
      <ol class="breadcrumb">
        <li><%= link_to "Ana Səhifə", root_path  %></li>
        <li class="active">Sual-Cavab</li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel-group" id="accordion">
        <% @questions.each do |question| %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">
                <%= link_to question.title, question.anchorize, class: 'accordion-toggle', data: {toggle: 'collapse', parent: '#accordion'} %>
              </h4>
            </div>
            <div id="<%= question.slug %>" class="panel-collapse collapse">
              <div class="panel-body">
                <%= question.answer.html_safe %>
              </div>
            </div>
          </div>
        <% end %>
        </div>
     </div>
  </div>
</div>