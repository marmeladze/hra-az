<div class="container">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li class="active"><%= link_to "Bloq", category_path(slug: 'bloq') %></li>
      </ol>
    </div>
  </div>
  <div class="row">
    <% @blog_posts.each do |post| %>
      <div class="col-md-12">
        <div class="well">
            <div class="media">
              <a class="pull-left" href="#">
                <%= cl_image_tag(post.author.image, width: 150, height: 150, crop: :thumb, gravity: :face, alt: post.author.name, class: "media-object") %>
              </a>
              <div class="media-body">
                <h4 class="media-heading"><%= link_to post.title, article_path(slug: post.slug) %></h4>
                <p><small><%= link_to post.author.title, author_path(slug: post.author.slug) %></small></p>
                <p><%= strip_tags(post.body).slice(0, 350) %></p>
                <ul class="list-inline list-unstyled">
                  <li><span><i class="glyphicon glyphicon-calendar"></i> <%= time_ago_in_words(post.updated_at) %> </span></li>
                </ul>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>