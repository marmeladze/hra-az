<style type="text/css">
  h1.featured-header {
    font-size: 15px;
  }
</style>

<div class="container">

  <div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
          <li class="active">Seçilmiş</li>
        </ol>
    </div>
    <% @featured.each do  |article| %>
      <div class="col-md-4">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h4>
              <i class="glyphicon glyphicon-calendar"></i>&nbsp;<small><%= time_ago_in_words(article.created_at) %></small>
              <i class="fa fa-list"></i>&nbsp;<small><%= link_to article.category.name, category_path(slug: article.category.slug) %></small>
            </h4>
          </div>
          <div class="panel-body">
            <h1 class='featured-header'><%= article.title %></h1>
            <p><%= "#{strip_tags(article.body.html_safe).slice(0, 200)} ..." %></p>
            <%= link_to "Ardını oxu", article_path(slug: article.slug), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <hr>
</div>
