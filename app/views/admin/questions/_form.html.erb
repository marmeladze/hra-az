<div class="well">
<%= form_for [:admin, @question] do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>
      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title_az %><br>
    <%= f.text_field :title_az %>
  </div>
  <div class="field">
    <%= f.label :title_en %><br>
    <%= f.text_field :title_en %>
  </div>
  <div class="field">
    <%= f.label :answer_az %><br>
    <%= f.text_area :answer_az %>
  </div>
  <div class="field">
    <%= f.label :answer_en %><br>
    <%= f.text_area :answer_en %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
<script type="text/javascript">
  attachContent = function() {
    document.getElementById("question_answer_az").value = document.querySelector(".note-editable")[0].innerHTML;
    document.getElementById("question_answer_en").value = document.querySelector(".note-editable")[1].innerHTML;
  }  
</script>
<script type="text/javascript">
window.onload = function() {
  if (window.location.pathname.includes("/edit")) {
    var body_az = document.getElementById("question_answer_az").value;
    var body_en = document.getElementById("question_answer_en").value;

    document.querySelector(".note-editable")[0].innerHTML = body_az;
    document.querySelector(".note-editable")[1].innerHTML = body_en;  
  }    
}
</script>
