<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<%= link_to 'New Article', new_admin_article_path, class: "btn btn-success" %>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Author</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= cl_image_tag(article.image, :width => 50, :height => 50, :crop => :fill) %></td>
        <td><%= article.author.name %></td>
        <td><%= article.category.name %></td>
        <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
        <td><%= link_to 'Destroy', [:admin, article], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
