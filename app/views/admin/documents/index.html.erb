<p id="notice"><%= notice %></p>

<h1>Listing Documents</h1>
<%= link_to 'New Document', new_admin_document_path, class: "btn btn-success" %>
<%= paginate @documents, remote: true %>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Abbr</th>
      <th>Title</th>
      <th>Found</th>
      <th>Organization</th>
      <th>Url az</th>
      <th>Url en</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.abbr %></td>
        <td><%= document.title %></td>
        <td><%= document.found %></td>
        <td><%= document.organization %></td>
        <td><%= document.url_az %></td>
        <td><%= document.url_en %></td>
        <td><%= link_to 'Edit', edit_admin_document_path(document) %></td>
        <td><%= link_to 'Destroy', remove_admin_document_path(document), method: :put, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
